 @Override
    public CandidateDTO updateOfferLetterStatus(Long candidateId, OfferLetterStatus status) throws CandidateException {
        Optional<Candidate> candidateOpt = candidateRepository.findById(candidateId);
        if (candidateOpt.isPresent()) {
            Candidate candidate = candidateOpt.get();
            candidate.setOfferLetterStatus(status);
            candidate = candidateRepository.save(candidate);
            return modelMapper.map(candidate, CandidateDTO.class);
        } else {
            throw new CandidateException("Candidate not found with ID: " + candidateId);
        }
    }

    // Continue implementing the rest of the methods from the CandidateService interface

}
