package com.adp.eletter.service;

import static org.mockito.Mockito.*;
import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.MockitoAnnotations;

import com.adp.eletter.entitiy.Manager;
import com.adp.eletter.repository.ManagerRepository;

public class ManagerServiceImplTest {

    @Mock
    private ManagerRepository managerRepository;

    @Mock
    private CandidateServiceImpl candidateServiceImpl;

    @InjectMocks
    private ManagerServiceImpl managerService;

    @BeforeEach
    public void setup() {
        MockitoAnnotations.openMocks(this);
    }

    @Test
    public void testGetById() {
        Manager mockManager = new Manager();
        when(managerRepository.findById(1L)).thenReturn(Optional.of(mockManager));

        Manager resultManager = managerService.getById(1L);

        assertNotNull(resultManager);
        assertEquals(mockManager, resultManager);
    }

    @Test
    public void testUpdateProfile() {
        Manager existingManager = new Manager();
        Manager updatedManager = new Manager();
        when(managerRepository.findById(1L)).thenReturn(Optional.of(existingManager));
        when(managerRepository.save(existingManager)).thenReturn(existingManager);

        Manager resultManager = managerService.updateProfile(1L, updatedManager);

        assertNotNull(resultManager);
        assertEquals(existingManager, resultManager);
    }

    // Similarly, you can write tests for other methods ...

}
