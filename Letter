package com.adp.eletter.entity;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertNotNull;

import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

import com.adp.eletter.entitiy.User;

public class UserTests {

    private User user;

    @BeforeEach
    void setUp() throws Exception {
        user = new User("panda", "123", "panda@adp.com", "hr", "wsd");
    }

    @AfterEach
    void tearDown() throws Exception {
        user = null;
    }

    @Test
    void testAllArgConstructor() {
        assertNotNull(user);
    }

    @Test
    void testDefaultConstructor() {
        User defaultUser = new User();
        assertNotNull(defaultUser);
    }

    @Test
    void testGetters() {
        assertEquals("wsd", user.getManagerId());
        assertEquals("panda", user.getName());
        assertEquals("panda@adp.com", user.getEmail());
        assertEquals("123", user.getPassword());
        assertEquals("hr", user.getRole());
    }

    @Test
    void testSetters() {
        user.setManagerId("wsda");
        user.setEmail("panda@gmail.com");
        user.setName("ppaa");
        user.setPassword("999");
        user.setRole("manager");

        assertEquals("wsda", user.getManagerId());
        assertEquals("ppaa", user.getName());
        assertEquals("panda@gmail.com", user.getEmail());
        assertEquals("999", user.getPassword());
        assertEquals("manager", user.getRole());
    }

    @Test
    void testToString() {
        user.setManagerId("wsda");
        user.setEmail("panda@gmail.com");
        user.setName("ppaa");
        user.setPassword("999");
        user.setRole("manager");

        String toTest = "User(name=ppaa, password=999, email=panda@gmail.com, role=manager, managerId=wsda)";
        assertEquals(toTest, user.toString());
    }
}
