@Test
void testToString() {
    // Setting up the object
    CandidateDTO candidate = CandidateDTO.builder()
        .candidateId(12L)
        .firstName("panda")
        .lastName("barenya")
        .email("panda@gmail.com")
        .pay(1000000L)
        .jobId("ADP01")
        .gender("Male")
        .mobile(9390999755L)
        .assignedHRId("3gds")
        .offerLetterStatus(OfferLetterStatus.GENERATED)
        .selectedTemplateId("12gnfc")
        .generatedLetterDestination("yes")
        .remarksByHR("Remarks by HR")
        .remarksByManager("Remarks by Manager")
        .build();

    // Generating the expected string
    String expected = "CandidateDTO(candidateId=12, " +
        "firstName=panda, " +
        "lastName=barenya, " +
        "email=panda@gmail.com, " +
        "pay=1000000, " +
        "jobId=ADP01, " +
        "gender=Male, " +
        "mobile=9390999755, " +
        "assignedHRId=3gds, " +
        "offerLetterStatus=GENERATED, " +
        "selectedTemplateId=12gnfc, " +
        "generatedLetterDestination=yes, " +
        "remarksByHR=Remarks by HR, " +
        "remarksByManager=Remarks by Manager)";

    // Asserting
    assertEquals(expected, candidate.toString());
}
