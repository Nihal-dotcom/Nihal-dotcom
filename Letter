using OpenQA.Selenium;
using OpenQA.Selenium.Chrome;
using OpenQA.Selenium.Support.UI;
using SeleniumExtras.WaitHelpers;
using System;

class Run
{
    static void Main()
    {
        IWebDriver driver = new ChromeDriver();
        WebDriverWait wait = new WebDriverWait(driver, TimeSpan.FromSeconds(25));

        try
        {
            // Navigate to the URL
            driver.Manage().Window.Maximize(); // Maximize the browser window
            string url = "https://runpayroll-qafit.nj.adp.com/";
            driver.Navigate().GoToUrl(url);

            // Wait for the page to load (adjust wait time as needed)
            wait.Until(driver => ((IJavaScriptExecutor)driver).ExecuteScript("return document.readyState").Equals("complete"));

            // Wait for the URL to contain the expected value
            wait.Until(ExpectedConditions.UrlContains("https://online-fit.nj.adp.com/"));

            // Perform login
            Login(driver, wait);

            // Additional actions after successful login
            SearchForItems(driver, wait);

        }
        catch (Exception e)
        {
            Console.WriteLine(e.Message);
        }
        finally
        {
            driver.Quit();
        }
    }

    static void Login(IWebDriver driver, WebDriverWait wait)
    {
        // Find username input
        IWebElement usernameInput = driver.FindElement(By.Id("login-form_username"));
        usernameInput.SendKeys("Firmtest1@kumar");

        // Click next button
        IWebElement nextButton = driver.FindElement(By.Id("verifUseridBtn"));
        nextButton.Click();
        wait.Until(ExpectedConditions.ElementIsVisible(By.Id("login-form_password")));

        // Find password input
        IWebElement passwordInput = driver.FindElement(By.Id("login-form_password"));
        passwordInput.SendKeys("Nihal123#");

        // Click sign-in button
        IWebElement signInButton = driver.FindElement(By.Id("signBtn"));
        signInButton.Click();
        wait.Until(ExpectedConditions.UrlContains("https://runpayrollmain2-qafit.nj.adp.com/"));
    }

    static void SearchForItems(IWebDriver driver, WebDriverWait wait)
    {
        wait.Until(driver => ((IJavaScriptExecutor)driver).ExecuteScript("return document.readyState").Equals("complete"));
        wait.Until(ExpectedConditions.UrlContains("https://runpayrollmain2-qafit.nj.adp.com/"));

        // Your existing code for searching items
        IWebElement searchbar = wait.Until(ExpectedConditions.ElementIsVisible(By.XPath("//*[@id=\"SSPage_txtSearch\"]")));
        searchbar.SendKeys("payroll");

        // Add additional actions as needed
    }
}
