Test
    public void whenCandidatesExistUnderHR_thenListShouldReturn() throws CandidateException {
        String hrId = "3gds";
        List<CandidateDTO> candidates = candidateServiceImpl.getCandidateByHRId(hrId);
        assertThat(candidates).isNotNull();
        assertThat(candidates).hasSizeGreaterThan(0);
    }

    @Test
    public void whenStatusIsGiven_thenCandidatesWithThatStatusShouldBeReturned() throws CandidateException {
        OfferLetterStatus status = OfferLetterStatus.GENERATED;
        List<CandidateDTO> candidates = candidateServiceImpl.getCandidateByStatus(status);
        for (CandidateDTO candidate : candidates) {
            assertThat(candidate.getOfferLetterStatus()).isEqualTo(status);
        }
    }
